  "repository": "https://github.com/PowerNukkitX/PNX-Wiki.git",
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "npm run update-docs && docusaurus build && cp _redirects build",
    "update-docs": "./node_modules/.bin/ts-node ./scripts/update-plugins-docs/index.ts; npm run prettify-updated-docs;",
    "prettify-updated-docs": "./node_modules/.bin/prettier --write --config ../.prettierrc ./sidebars.json ./i18n/en.json ./docs/plugins ./docs/releases",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "lint": "npm run lint_core -- --fix",
    "lint_ci": "npm run lint_core",
    "lint_core": "./node_modules/.bin/eslint_d --cache --quiet 'src/**/*.js' 'scripts/**/*.ts'"
  },
  "dependencies": {
    "@docusaurus/core": "3.3.2",
    "@docusaurus/plugin-client-redirects": "^3.3.2",
    "@docusaurus/plugin-ideal-image": "^3.3.2",
    "@docusaurus/preset-classic": "3.3.2",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mdx-js/react": "^3.0.1",
    "@saucelabs/theme-github-codeblock": "^0.2.3",
    "aos": "^2.3.4",
    "autoprefixer": "^10.4.19",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "css-loader": "^7.1.2",
    "docusaurus-plugin-sass": "^0.2.5",
    "file-loader": "^6.2.0",
    "markdown-it": "^14.1.0",
    "prism-react-renderer": "^2.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-syntax-highlighter": "^15.5.0",
    "sass": "^1.77.2",
    "sass-loader": "^14.2.1",
    "style-loader": "^4.0.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.3.2",
    "@tsconfig/docusaurus": "^2.0.3",
    "@types/markdown-it": "^14.1.1",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "autoprefixer": "^10.4.19",
    "docusaurus-tailwindcss-loader": "file:plugins/docusaurus-tailwindcss-loader",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint_d": "^13.1.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint",
      "node",
      "import"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "node/no-missing-import": "warn",
      "import/no-unresolved": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": "18.x"
  }
}
